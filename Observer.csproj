<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <PublishSingleFile>true</PublishSingleFile>
        <!--IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract-->
        <DebugType>embedded</DebugType>
        <PublishTrimmed>true</PublishTrimmed>

        <GenerateAssemblyInfo>true</GenerateAssemblyInfo>

        <Version>0.1.0</Version>
        <Authors>Mooshua</Authors>
    </PropertyGroup>
    
    <ItemGroup>
      <PackageReference Include="MimeKit" Version="3.3.0" />
      <PackageReference Include="NLua" Version="1.6.0" />
      <PackageReference Include="RavenDB.Client" Version="5.3.103" />
      <PackageReference Include="SmtpServer" Version="9.0.1" />
      <PackageReference Include="Spectre.Console" Version="0.44.1-preview.0.17" />
    </ItemGroup>

</Project>
